
<%- include("partials/header"); -%>
<div class="header">

    <div class="username">
      <h1>Home</h1>
      <div class="info-user">
        <p>User: <%= username %></p>
        <a class="logout" href="/logout">Logout</a>
      </div>
    </div>

    <p><%=startingContent%></p>

</div>
  

<div class="posts">

  <%  posts.forEach(function(post){ %>
    
    <div class="post">
      <h2><%=post.title%></h2>

      <div>
        <p>Author: </p>
      <p><strong><%=post.authorUsername%></strong></p>
    </div>
      <p><%=post.content.substring(0, 100)%>... <a class="read-more" href="/posts/<%=post.title%>">Read More</a></p>
      <form class="delete-form" action="/" method="post">
        <button type="submit" class="delete" name="postDelete" value="<%=post.title%>">Delete</button>
      </form>
    </div>
  
  <% }) %>

</div>

<%- include("partials/footer"); -%>
