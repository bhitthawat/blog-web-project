
<%- include("partials/header"); -%>
<div class="header">
    <h1>Home</h1>
    <p> <%= startingContent %> </p>

  </div>
  
<div class="posts">

  <%  posts.forEach(function(post){ %>
    <div class="post">
    <h1><%=post.title%></h1>
    <p>
    <%=post.content.substring(0, 100) + " ..."%>
    
    <a href="/posts/<%=post.title%>">Read More</a><form action="/" method="post"><button type="submit" class="delete" name="postDelete" value="<%=post.title%>">Delete</button></form>
    </p>
    
  </div>
    <% }) %>
  </div>

<%- include("partials/footer"); -%>
